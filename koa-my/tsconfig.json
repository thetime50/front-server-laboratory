// tsconfig.json
{
    "compilerOptions": {
        // 与 Vue 的浏览器支持保持一致
        // "target": "es5",
        "target": "ES6",
        // 这可以对 `this` 上的数据属性进行更严格的推断
        "strict": true,
        // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
        // "module": "es2015",
        "module": "es2020",
        "moduleResolution": "node",

        //**
        "noImplicitAny": false,
        //**
        
        // "module": "umd",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
        },
    },


    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ]
}